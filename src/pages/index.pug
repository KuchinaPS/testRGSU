extends common/layout

block content
  main.main-page
    .wrapper
      .tabs.tabs__signIn.hidden
        .tabs-triggers
          a.tabs-triggers__item(href ="#tab-1") Авторизация
          a.tabs-triggers__item(href ="#tab-2") Регистрация
        .tabs-content
          #tab-1.tabs-content__item.tabs-content__item--auth
            form.tabs-content__form.form
              .form__row
                label.form__label(for="mail") Ваш email
                  span *
                input.form__input.mask-email(type="text" ID="mail" placeholder="Укажите адрес электронной почты" required)
              .form__row
                label(for="pass").form__label Введите пароль
                  span *
                input.form__input(type="password" ID="pass" placeholder="*****" required)
              .form__row
                button.btn.btn__bottom(type ="submit") Добавить запись
                a.form__link(href = "#") Забыли пароль?
          #tab-2.tabs-content__item.tabs-content__item--reg
            form.tabs-content__form.form
              .form__row
                label.form__label(for="name") ФИО
                  span *
                input.form__input(type="text" ID="name" placeholder="Фамилия Имя Отчество" required)
              .form__row.form__row--reg
                .form__wrap
                  label.form__label(for="email") Email
                    span *
                  input.form__input.mask-email(type="text" ID="email"  placeholder="Адрес будет логином на портале" required)
                .form__wrap
                  label.form__label(for="phone") Телефон
                    span *
                  input.form__input.mask-phone(type="tel" ID="phone" placeholder="+7(___)___-__-__" required)
              .form__row.form__row--reg
                .form__wrap
                  label.form__label(for="snils") СНИЛС
                    span *
                  input.form__input.mask-snils(type="text" ID="snils" placeholder="___-___-__" required)
                .form__wrap
                  label.form__label(for="date") Дата рождения
                    span *
                  input.form__input.mask-date(type="text" ID="date"  placeholder="__.__.____" required)
              .form__row
                .form__wrap.form__wrap--check
                  input.form__check(type="checkbox" ID="check-pd" required)
                  label.form__label(for="check-pd") Согласен на обработку моих персональных данных
                    span *
                .form__wrap.form__wrap--check
                  input.form__check(type="checkbox" ID="check-subscribe" required)
                  label.form__label(for="check-subscribe") Согласен на получение уведомлений и рассылок
                    span *
              .form__row
                button.btn.btn__bottom Зарегистрироваться
                button.btn.btn__cancel Отказаться
